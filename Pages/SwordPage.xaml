            <CheckBox x:Name="Plague_Bearer" Content="Plague Bearer" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:583" Checked="Plague_Bearer_Checked" Unchecked="Plague_Bearer_Unchecked"/>
            <CheckBox x:Name="The_Atlantean" Content="The Atlantean" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Nightmare) 1:598" Margin="0,0,0,30" Checked="The_Atlantean_Checked" Unchecked="The_Atlantean_Unchecked"/>
            <CheckBox x:Name="Crainte_Vomir" Content="Crainte Vomir" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:529" Checked="Crainte_Vomir_Checked" Unchecked="Crainte_Vomir_Unchecked"/>
            <CheckBox x:Name="Bing_Sz_Wang" Content="Bing Sz Wang" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:683" Checked="Bing_Sz_Wang_Checked" Unchecked="Bing_Sz_Wang_Unchecked"/>
            <CheckBox x:Name="The_Vile_Husk" Content="The Vile Husk" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:584" Checked="The_Vile_Husk_Checked" Unchecked="The_Vile_Husk_Unchecked"/>
            <CheckBox x:Name="Cloudcrack" Content="Cloudcrack" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Nightmare) 1:598" Checked="Cloudcrack_Checked" Unchecked="Cloudcrack_Unchecked"/>
