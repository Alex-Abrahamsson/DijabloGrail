<Page x:Class="DijabloGrail.Pages.SwordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DijabloGrail.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SwordPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/klipp.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Monotype Corsiva" FontSize="42" Foreground="#FFC77600" FontWeight="Bold">
            <TextBlock.TextDecorations>
                <TextDecoration/>
            </TextBlock.TextDecorations><Run Language="sv-se" Text="Swords"/></TextBlock>
        <ListBox HorizontalAlignment="Left" Height="450" Margin="99,93,0,0" VerticalAlignment="Top" Width="280" FontSize="24" Background="#B2000000" BorderBrush="Black" Foreground="#FFC77600">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="200" FontFamily="Monotype Corsiva" FontSize="26"><Run FontWeight="Bold" FontStyle="Italic" Text="Normal Unique" TextDecorations="Underline"/></TextBlock>
            <CheckBox x:Name="Rixot_s_Keen" Content="Rixot's Keen" FontSize="16" Foreground="#FFE28909" ToolTip="Blood Raven (Normal) 1:1050" Checked="Rixot_s_Keen_Checked" Unchecked="Rixot_s_Keen_Unchecked"/>
            <CheckBox x:Name="Blood_Crescent" Content="Blood Crescent" FontSize="16" Foreground="#FFE28909" ToolTip="Andariel (Normal) 1:237" Checked="Blood_Crescent_Checked" Unchecked="Blood_Crescent_Unchecked"/>
            <CheckBox x:Name="Skewer_of_Krintiz" Content="Skewer of Krintiz" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Normal) 1:208" Checked="Skewer_of_Krintiz_Checked" Unchecked="Skewer_of_Krintiz_Unchecked"/>
            <CheckBox x:Name="Gleamscythe" Content="Gleamscythe" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Normal) 1:155" Checked="Gleamscythe_Checked" Unchecked="Gleamscythe_Unchecked"/>
            <CheckBox x:Name="Griswold_s_Edge" Content="Griswold's Edge" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Normal) 1:127" Checked="Griswold_s_Edge_Checked" Unchecked="Griswold_s_Edge_Unchecked"/>
            <CheckBox x:Name="Hellplague" Content="Hellplague" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Normal) 1:141" Checked="Hellplague_Checked" Unchecked="Hellplague_Unchecked"/>
            <CheckBox x:Name="Culwen_s_Point" Content="Culwen's Point" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Normal) 1:196" Margin="0,0,0,50" Checked="Culwen_s_Point_Checked" Unchecked="Culwen_s_Point_Unchecked"/>
            <CheckBox x:Name="Shadowfang" Content="Shadowfang" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Normal) 1:155" Checked="Shadowfang_Checked" Unchecked="Shadowfang_Unchecked"/>
            <CheckBox x:Name="Soulflay" Content="Soulflay" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Normal) 1:132" Checked="Soulflay_Checked" Unchecked="Soulflay_Unchecked"/>
            <CheckBox x:Name="Kinemil_s_Awl" Content="Kinemil's Awl" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Normal) 1:142" Checked="Kinemil_s_Awl_Checked" Unchecked="Kinemil_s_Awl_Unchecked"/>
            <CheckBox x:Name="Blacktongue" Content="Blacktongue" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Normal) 1:188" Checked="Blacktongue_Checked" Unchecked="Blacktongue_Unchecked"/>
            <CheckBox x:Name="Ripsaw" Content="Ripsaw" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Normal) 1:196" Checked="Ripsaw_Checked" Unchecked="Ripsaw_Unchecked"/>
            <CheckBox x:Name="The_Patriarch" Content="The Patriarch" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Normal) 1:338" Checked="The_Patriarch_Checked" Unchecked="The_Patriarch_Unchecked"/>
        </ListBox>
        <ListBox HorizontalAlignment="Center" Height="450" Margin="0,93,0,0" VerticalAlignment="Top" Width="280" FontSize="24" Background="#B2000000" BorderBrush="Black" Foreground="#FFC77600">
            <TextBlock TextWrapping="Wrap" Height="40" Width="250" FontFamily="Monotype Corsiva" FontSize="26"><Run FontWeight="Bold" FontStyle="Italic" Text="Exceptional Unique" TextDecorations="Underline"/></TextBlock>
            <CheckBox x:Name="Bloodletter" Content="Bloodletter" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Normal) 1:238" Checked="Bloodletter_Checked" Unchecked="Bloodletter_Unchecked"/>
            <CheckBox x:Name="Coldsteel_Eye" Content="Coldsteel Eye" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:581" Checked="Coldsteel_Eye_Checked" Unchecked="Coldsteel_Eye_Unchecked"/>
            <CheckBox x:Name="Hexfire" Content="Hexfire" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Normal) 1:359" Checked="Hexfire_Checked" Unchecked="Hexfire_Unchecked"/>
            <CheckBox x:Name="Blade_Of_Ali_Baba" Content="Blade Of Ali Baba" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:529" Checked="Blade_Of_Ali_Baba_Checked" Unchecked="Blade_Of_Ali_Baba_Unchecked"/>
            <CheckBox x:Name="Ginther_s_Rift" Content="Ginther's Rift" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Nightmare) 1:529" Checked="Ginther_s_Rift_Checked" Unchecked="Ginther_s_Rift_Unchecked"/>
