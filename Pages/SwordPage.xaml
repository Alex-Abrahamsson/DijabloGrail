        <ListBox HorizontalAlignment="Left" Height="450" Margin="908,93,0,0" VerticalAlignment="Top" Width="280" FontSize="24" Background="#B2000000" BorderBrush="Black" Foreground="#FFC77600">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="200" FontFamily="Monotype Corsiva" FontSize="26"><Run FontWeight="Bold" FontStyle="Italic" Text="Elite Unique" TextDecorations="Underline"/></TextBlock>
            <CheckBox x:Name="Djinn_Slayer" Content="Djinn Slayer" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Hell) 1:565" Checked="Djinn_Slayer_Checked" Unchecked="Djinn_Slayer_Unchecked"/>
            <CheckBox x:Name="Bloodmoon" Content="Bloodmoon" FontSize="16" Foreground="#FFE28909" ToolTip="Mephisto (Hell) 1:568" Checked="Bloodmoon_Checked" Unchecked="Bloodmoon_Unchecked"/>
            <CheckBox x:Name="Lightsabre" Content="Lightsabre" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Hell) 1:560" Checked="Lightsabre_Checked" Unchecked="Lightsabre_Unchecked"/>
            <CheckBox x:Name="Azurewrath" Content="Azurewrath" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Hell) 1:2799" Checked="Azurewrath_Checked" Unchecked="Azurewrath_Unchecked"/>
            <CheckBox x:Name="Frostwind" Content="Frostwind" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Hell) 1:1158" Margin="0,0,0,30" Checked="Frostwind_Checked" Unchecked="Frostwind_Unchecked"/>
            <CheckBox x:Name="Flamebellow" Content="Flamebellow" FontSize="16" Foreground="#FFE28909" ToolTip="Diablo (Hell) 1:582" Checked="Flamebellow_Checked" Unchecked="Flamebellow_Unchecked"/>
            <CheckBox x:Name="Doombringer" Content="Doombringer" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Hell) 1:1029" Checked="Doombringer_Checked" Unchecked="Doombringer_Unchecked"/>
            <CheckBox x:Name="The_Grandfather" Content="The Grandfather" FontSize="16" Foreground="#FFE28909" ToolTip="Baal (Hell) 1:14565" Checked="The_Grandfather_Checked" Unchecked="The_Grandfather_Unchecked"/>
        </ListBox>
        <Button x:Name="MenuBtn" Content="Menu" HorizontalAlignment="Left" Margin="1138,625,0,0" VerticalAlignment="Top" Width="100" Click="MenuBtn_Click" Height="40" FontFamily="Monotype Corsiva" FontSize="28" FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Images/MenuBtn.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
