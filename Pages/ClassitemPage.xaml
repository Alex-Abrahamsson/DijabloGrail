            <CheckBox x:Name="Jalal_s_Mane" Content="Jalal's Mane" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:1053" Checked="Jalal_s_Mane_Checked" Unchecked="Jalal_s_Mane_Unchecked"/>
