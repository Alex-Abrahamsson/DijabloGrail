<Page x:Class="DijabloGrail.Pages.ClassitemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DijabloGrail.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ClassitemPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/NewBlack.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="0,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="MV Boli" FontSize="42" Foreground="#FFC77600" FontWeight="Bold"><Run Text="Class"/><Run Language="sv-se" Text=" "/><Run Text="Specific Items"/></TextBlock>
        <Button x:Name="MenuBtn" Content="Menu" HorizontalAlignment="Left" Margin="1140,600,0,0" VerticalAlignment="Top" Width="100" Click="MenuBtn_Click" Height="40" FontFamily="Monotype Corsiva" FontSize="28" FontWeight="Bold" TextBlock.FontFamily="MV Boli">
            <Button.Background>
                <ImageBrush ImageSource="/Images/MenuBtn.png"/>
            </Button.Background>
        </Button>
        <ListBox Foreground="#FFC77600" BorderBrush="Black" Background="#B2000000" TextBlock.FontFamily="MV Boli" Margin="90,76,940,360" Width="250">
            <TextBlock TextWrapping="Wrap" Height="40" Width="114" FontFamily="MV Boli" FontSize="26" Foreground="#FFC77600" Margin="30,0,0,0"><Run Language="sv-se" Text="Amazon"/></TextBlock>
            <CheckBox x:Name="Stoneraven" Content="Stoneraven" FontSize="16" Foreground="#FFC77600" ToolTip="Mephisto (Hell) 1:1052" Checked="Stoneraven_Checked" Unchecked="Stoneraven_Unchecked"/>
            <CheckBox x:Name="Lycander_s_Flank" Content="Lycander's Flank" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:1113" Checked="Lycander_s_Flank_Checked" Unchecked="Lycander_s_Flank_Unchecked"/>
            <CheckBox x:Name="Lycander_s_Aim" Content="Lycander's Aim" FontSize="16" Foreground="#FFC77600" ToolTip="Diablo (Nightmare) 1:1092" Checked="Lycander_s_Aim_Checked" Unchecked="Lycander_s_Aim_Unchecked"/>
            <CheckBox x:Name="Titan_s_Revenge" Content="Titan's Revenge" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Normal) 1:667" Checked="Titan_s_Revenge_Checked" Unchecked="Titan_s_Revenge_Unchecked"/>
            <CheckBox x:Name="Thunderstroke" Content="Thunderstroke" FontSize="16" Foreground="#FFC77600" ToolTip="Mephisto (Hell) 1:809" Checked="Thunderstroke_Checked" Unchecked="Thunderstroke_Unchecked"/>
            <CheckBox x:Name="Blood_Raven_s_Charge" Content="Blood Raven's Charge" FontSize="16" Foreground="#FFC77600" ToolTip="Mephisto (Hell) 1:1164" Checked="Blood_Raven_s_Charge_Checked" Unchecked="Blood_Raven_s_Charge_Unchecked"/>
        </ListBox>
        <ListBox Foreground="#FFC77600" BorderBrush="Black" Background="#B2000000" TextBlock.FontFamily="MV Boli" Margin="390,110,640,360" Width="250">
            <TextBlock TextWrapping="Wrap" Height="40" Width="121" FontFamily="MV Boli" FontSize="26" Margin="30,0,0,0"><Run Text="As"/><Run Language="sv-se" Text="s"/><Run Text="assin"/></TextBlock>
            <CheckBox x:Name="Shadow_Killer" Content="Shadow Killer" FontSize="16" Foreground="#FFC77600" ToolTip="Diablo (Hell) 1:430" Checked="Shadow_Killer_Checked" Unchecked="Shadow_Killer_Unchecked"/>
            <CheckBox x:Name="Bartuc_s_Cut_Throat" Content="Bartuc's Cut-Throat" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:556" Checked="Bartuc_s_Cut_Throat_Checked" Unchecked="Bartuc_s_Cut_Throat_Unchecked"/>
            <CheckBox x:Name="Jade_Talon" Content="Jade Talon" FontSize="16" Foreground="#FFC77600" ToolTip="Mephisto (Hell) 1:526" Checked="Jade_Talon_Checked" Unchecked="Jade_Talon_Unchecked"/>
