        </ListBox>
        <ListBox Foreground="#FFC77600" BorderBrush="Black" Background="#B2000000" TextBlock.FontFamily="MV Boli" Margin="990,76,40,360" Width="250">
            <TextBlock TextWrapping="Wrap" Height="40" Width="114" FontFamily="MV Boli" FontSize="26" Foreground="#FFC77600" Margin="30,0,0,0"><Run Language="sv-se" Text="Barbarian"/></TextBlock>
            <CheckBox x:Name="Arreat_s_Face" Content="Arreat's Face" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:1688" Checked="Arreat_s_Face_Checked" Unchecked="Arreat_s_Face_Unchecked"/>
