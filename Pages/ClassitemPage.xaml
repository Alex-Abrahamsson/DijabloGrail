            <CheckBox x:Name="Homunculus" Content="Homunculus" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:1688" Checked="Homunculus_Checked" Unchecked="Homunculus_Unchecked"/>
            <CheckBox x:Name="Darkforce_Spawn" Content="Darkforce Spawn" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Hell) 1:32682" Checked="Darkforce_Spawn_Checked" Unchecked="Darkforce_Spawn_Unchecked"/>
            <CheckBox x:Name="Boneflame" Content="Boneflame" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Hell) 1:2095" Checked="Boneflame_Checked" Unchecked="Boneflame_Unchecked"/>
        </ListBox>
        <ListBox Foreground="#FFC77600" BorderBrush="Black" Background="#B2000000" TextBlock.FontFamily="MV Boli" Margin="535,440,495,80" Width="250" Height="200">
            <TextBlock TextWrapping="Wrap" Height="40" Width="121" FontFamily="MV Boli" FontSize="26" Margin="30,0,0,0"><Run Language="sv-se" Text="Sorceress"/></TextBlock>
            <CheckBox x:Name="The_Oculus" Content="The Oculus" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:1113" Checked="The_Oculus_Checked" Unchecked="The_Oculus_Unchecked"/>
