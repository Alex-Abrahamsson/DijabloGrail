            <CheckBox x:Name="Spirit_Keeper" Content="Spirit Keeper" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Hell) 1:2602" Checked="Spirit_Keeper_Checked" Unchecked="Spirit_Keeper_Unchecked"/>
        </ListBox>
        <ListBox Foreground="#FFC77600" BorderBrush="Black" Background="#B2000000" TextBlock.FontFamily="MV Boli" Margin="841,440,189,80" Width="250" Height="200">
            <TextBlock TextWrapping="Wrap" Height="40" Width="104" FontFamily="MV Boli" FontSize="26" Margin="30,0,0,0"><Run Language="sv-se" Text="Paladin"/></TextBlock>
            <CheckBox x:Name="Alma_Negra" Content="Alma Negra" FontSize="16" Foreground="#FFC77600" ToolTip="Diablo (Hell) 1:1639" Checked="Alma_Negra_Checked" Unchecked="Alma_Negra_Unchecked"/>
            <CheckBox x:Name="Herald_Of_Zakarum" Content="Herald Of Zakarum" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Nightmare) 1:2419" Checked="Herald_Of_Zakarum_Checked" Unchecked="Herald_Of_Zakarum_Unchecked"/>
            <CheckBox x:Name="Dragonscale" Content="Dragonscale" FontSize="16" Foreground="#FFC77600" ToolTip="Baal (Hell) 1:3705" Checked="Dragonscale_Checked" Unchecked="Dragonscale_Unchecked"/>
        </ListBox>

    </Grid>
</Page>
